@model Avaliacao.Data.Models.CarSale

@{
    ViewData["Title"] = "Excluir cadastro de venda de carro.";
}

<h1 class="text-primary">@ViewData["Title"]</h1>

<h3 class="text-danger">Tem certeza de que deseja excluir isso?</h3>
<div>
   
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>

    <form asp-action="Delete">
        
        <div class="form-group">
            <button type="submit" class="btn btn-outline-primary"> Excluir</button>
            <a asp-action="Index" class="btn btn-outline-success"> Volver</a>
        </div>
    </form>
</div>
