@model IEnumerable<Avaliacao.Data.Models.CarSale>

@{
    ViewData["Title"] = "Venda de carros";
}

    <h1 class="text-primary">@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-success">Nova venta</a>
</p>
<table class="table" >
    <thead>
        <tr class="bg-primary text-white text-center">
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">Editar</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">Mostrar</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Excluir</a>
            </td>
        </tr>
        }


    </tbody>
</table>



@if (Model.Count() > 0)
{
    <h3 class="text-primary"> Salario Final:  @ViewBag.Salary </h3>
}

